{% extends 'landing/base.html.twig' %}

{% block main %}

    <section id="skills">

        <div class="main reveal active">
            <div class="title">
                <h2>Umiejętności Twarde</h2>
            </div>

            <div class="skills">

                {% for skill in skills%}

                    {% if skill.category == 2 %}

                        {% set index = 1 %}

                        <div class="bar">

                            <div class="info">
                                <span>{{ skill.name }}</span>
                            </div>

                            <div class="progress _{{ skill.percentage }}">
                                <span  class="sSpan" style="width: {{ skill.percentage }}%;"></span>
                            </div>

                        </div>

                        {% set index = index + 1 %}

                    {% endif %}

                {% endfor %}

                <div class="title">
                    <h2>Umiejętności miękkie</h2>
                </div>

                {% for skill in skills%}

                    {% if skill.category == 1 %}

                        {% set index = 1 %}

                        <div class="bar">

                            <div class="info">
                                <span>{{ skill.name }}</span>
                            </div>

                            <div class="progress _{{ skill.percentage }}">
                                <span  class="sSpan" style="width: {{ skill.percentage }}%;"></span>
                            </div>

                        </div>

                        {% set index = index + 1 %}

                    {% endif %}

                {% endfor %}

            </div>

        </div>

    </section>

{% endblock %}